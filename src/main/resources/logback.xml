<!-- Logback configuration. See http://logback.qos.ch/manual/index.html -->
<configuration scan="true" scanPeriod="10 seconds">
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- 按照大小切割日志, 保留一定的数量 -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/info.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/info.log.%i</fileNamePattern>
            <!-- 索引最小值，标识%i从1开始 -->
            <minIndex>1</minIndex>
            <!-- 索引最大值，标识%i到5结束，始终保留了5个归档文件 -->
            <maxIndex>20</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- 文件大小超过30MB归档 -->
            <maxFileSize>60MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%-5L] - %msg%n</Pattern>
        </layout>
    </appender>


    <!-- 按照大小切割日志, 保留一定的数量 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <File>logs/error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/error.log.%i</fileNamePattern>
            <!-- 索引最小值，标识%i从1开始 -->
            <minIndex>1</minIndex>
            <!-- 索引最大值，标识%i到5结束，始终保留了5个归档文件 -->
            <maxIndex>10</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- 文件大小超过30MB归档 -->
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%-5L] - %msg%n</Pattern>
        </layout>
    </appender>

    <logger name="huihuang.proxy" level="INFO" additivity="true">
    </logger>
    <root level="INFO">
        <appender-ref ref="INFO_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>


    <!-- 西瓜视频  -->
    <appender name="XIGUA_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/xigua/xigua.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/xigua/xigua.log.%i</fileNamePattern>
            <!-- 索引最小值，标识%i从1开始 -->
            <minIndex>1</minIndex>
            <!-- 索引最大值，标识%i到5结束，始终保留了5个归档文件 -->
            <maxIndex>20</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- 文件大小超过1GB归档 -->
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%-5L] - %msg%n</Pattern>
        </layout>
    </appender>


    <logger name="huihuang.proxy.ocpx.middle.impl.WifiXiguaChannelAds" level="INFO" additivity="true">
        <appender-ref ref="XIGUA_LOG"/>
    </logger>
    <logger name="huihuang.proxy.ocpx.bussiness.service.impl.WifiXiguaServiceImpl" level="INFO" additivity="true">
        <appender-ref ref="XIGUA_LOG"/>
    </logger>


    <!-- 京东  -->
    <appender name="LTJD_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/ltjd/ltjd.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/ltjd/ltjd.log.%i</fileNamePattern>
            <!-- 索引最小值，标识%i从1开始 -->
            <minIndex>1</minIndex>
            <!-- 索引最大值，标识%i到5结束，始终保留了5个归档文件 -->
            <maxIndex>20</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- 文件大小超过1GB归档 -->
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%-5L] - %msg%n</Pattern>
        </layout>
    </appender>


    <logger name="huihuang.proxy.ocpx.middle.impl.XJChannelAds" level="INFO" additivity="true">
        <appender-ref ref="LTJD_LOG"/>
    </logger>
    <logger name="huihuang.proxy.ocpx.bussiness.service.impl.XJServiceImpl" level="INFO" additivity="true">
        <appender-ref ref="LTJD_LOG"/>
    </logger>

    <!-- 优酷  -->
    <appender name="YOUKU_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/youku/youku.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>logs/youku/youku.log.%i</fileNamePattern>
            <!-- 索引最小值，标识%i从1开始 -->
            <minIndex>1</minIndex>
            <!-- 索引最大值，标识%i到5结束，始终保留了5个归档文件 -->
            <maxIndex>20</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <!-- 文件大小超过1GB归档 -->
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%-5L] - %msg%n</Pattern>
        </layout>
    </appender>


    <logger name="huihuang.proxy.ocpx.middle.impl.XYChannelAds" level="INFO" additivity="true">
        <appender-ref ref="YOUKU_LOG"/>
    </logger>
    <logger name="huihuang.proxy.ocpx.bussiness.service.impl.XYServiceImpl" level="INFO" additivity="true">
        <appender-ref ref="YOUKU_LOG"/>
    </logger>
    <logger name="huihuang.proxy.ocpx.middle.impl.BaiduYoukuChannelAds" level="INFO" additivity="true">
        <appender-ref ref="YOUKU_LOG"/>
    </logger>
    <logger name="huihuang.proxy.ocpx.bussiness.service.impl.BaiduYoukuServiceImpl" level="INFO" additivity="true">
        <appender-ref ref="YOUKU_LOG"/>
    </logger>


</configuration>